<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#F5F5F5">

    <!-- Profile Picture Placeholder -->
    <ImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:background="#DDDDDD"
        android:contentDescription="Your Profile Picture"
        android:src="@drawable/my_profile_pic" />  <!-- We'll change this -->

    <!-- Space between image and text -->
    <View
        android:layout_width="match_parent"
        android:layout_height="32dp" />

    <!-- Your Details -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BHAVANI SHANKAR MUKKA"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="College: ANITS"
        android:textSize="18sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student ID: A24126510097"
        android:textSize="18sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Graduation Year : BTECH 2nd Year"
        android:textSize="18sp"
        android:layout_marginTop="8dp" />

</LinearLayout>